        public void line() {
            check.neighbors();
            checked.colorofunits();
            if(neighbors==true, colorofunits == ally){
                line = true;

            }
            if (line == true) {
                check.line.length();
                if (line.length >= 4)
                {
                    Display.youwon;
                }
                else {
                    nextturn();
                }
            }
        }
